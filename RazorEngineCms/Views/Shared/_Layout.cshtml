<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    <link rel="stylesheet" href="/Content/simple-sidebar.css" type="text/css" />
    @Scripts.Render("~/bundles/modernizr")
    @RenderSection("styles", required: false)


</head>
<body>
    <div id="wrapper">
        <!-- Sidebar -->
        <div id="sidebar-wrapper">
            <ul class="sidebar-nav">
                <li class="sidebar-brand">
                    <a href="#">
                        Razor Engine CMS
                    </a>
                </li>
                <li>@Html.ActionLink("Home", "Index", "Home")</li>
                <li>@Html.ActionLink("New Page", "New", "Page")</li>
                <li>@Html.ActionLink("List Pages", "List", "Page")</li>
                <li>@Html.ActionLink("Contact", "Contact", "Home")</li>

            </ul>
            @*Html.Partial("_LoginPartial")*@
        </div>

        <div id="page-content-wrapper">
            <div class="container-fluid">
                <!--Start View Content-->
                @RenderBody()
                <!--/End View Content-->
            </div>
        </div>
        <!-- /#page-content-wrapper -->
    </div>
    <!-- /#wrapper -->

    <!-- Scripts -->
    @Scripts.Render("~/Scripts/vendor/jquery.js");
    @Scripts.Render("~/Scripts/vendor/bootstrap.min.js")
    @Scripts.Render("~/Scripts/default.js")
    @RenderSection("scripts", required: false)
</body>
</html>
